{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${modVersion}",

  "name": "${modName}",
  "description": "${modDescription}",

  "authors": [
    "${modAuthor}"
  ],
  
  "contact": {
    "homepage": "${modPageUrl}",
    "issues": "${modIssueUrl}",
    "sources": "${modPageUrl}"
  },

  "license": "MPL-2.0",
  "icon": "mod_logo.png",

  "environment": "${modFabricEnvironment}",

  "entrypoints": {
    "main": [
      "${modGroup}.impl.PuzzlesLibFabric"
    ],
    "client": [
    ],
    "cardinal-components": [
      "fuzs.puzzleslib.capability.CapabilityController"
    ]
  },

  "mixins": [
    "${modId}.common.mixins.json",
    "${modId}.fabric.mixins.json"
  ],

  "accessWidener": "${modId}.accesswidener",

  "depends": {
    "fabricloader": ">=${minFabricVersion}",
    "fabric-api": ">=${minFabricApiVersion}",
    "forgeconfigapiport": "*",
    "cardinal-components-base": "*",
    "cardinal-components-entity": "*",
    "minecraft": "${minecraftVersion}",
    "java": ">=17"
  },

  "custom": {
    "modmenu": {
      "badges": [
        "library"
      ]
    }
  }
}
